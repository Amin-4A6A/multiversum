{% extends "layout/base.twig" %}


{% block body %}
<div id="alert-box" class='alert alert-secondary alert-dismissible fade hide fixed-top mx-auto' style='top: 3.3em; width: 70%; ' role='alert'>
  <strong>U heeft een product toegevoegd!</strong>
  <button type='button' class='close' data-dismiss='alert' aria-label='Close'>
    <span aria-hidden='true'>&times;</span>
  </button>
</div>
<div class="row my-5 mr-0">
  <div class="col-xl-1"></div>
  <div class="col-xl-8">
    <div class="container content-container">
      {% block content %}

      {% endblock %}
    </div>
  </div>
  <div id="cart-col" class="col-xl-3"></div>

</div>
{% endblock %}
