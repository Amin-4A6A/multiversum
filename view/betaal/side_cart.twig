

<div class="card sticky-top mx-3" style="top: 5em; z-index: -1;">
  <h5 class="card-header">Winkelwagen</h5>
  <div class="card-body">
  {% for product in products["products"] %}
  <div class="row">
    <div class="col-md-3">
      <img class="w-100 mb-auto d-block" src="/images/product/{{ product["path"] }}" alt="">
    </div>
    <div class="col-md-7">
      <div class="row">
        <div class="col-md-12">
          <h5>{{ product["naam"] }}</h5>
        </div>
        <div class="col-md-12">
          <small>{{ product["prijs"] }}</small>
        </div>
      </div>
    </div>
    <div class="col-md-2"></div>
  </div>
  <hr>
  {% endfor %}
   
  

  </div>
 <table class="table">
  <tr>
    <th>Subtotaal</th>
    <td>{{products['subtotaal']}}</td>
  </tr>
   <tr>
    <th>exclusief btw</th>
    <td>{{products['exBTW']}}</td>
  </tr>
   <tr>
    <th>verzendkosten</th>
    <td>{{products['verzendkosten']}}</td>
  </tr>
   <tr>
    <th>Totaal</th>
    <td>{{products['totaal']}}</td>
  </tr>
 </table>
</div>
