

<div class="card sticky-top mx-3" style="top: 5em; z-index: -1;">
  <h5 class="card-header">Winkelwagen</h5>
  <div class="card-body">
  {% for product in products %}
  <div class="row">
    <div class="col-md-3">
      <img class="w-100 mb-auto d-block" src="/images/product/{{ product["path"] }}" alt="">
    </div>
    <div class="col-md-7">
      <div class="row">
        <div class="col-md-12">
          <h5>{{ product["naam"] }}</h5>
        </div>
        <div class="col-md-12">
          <small>{{ product["prijs"] }}</small>
        </div>
      </div>
    </div>
    <div class="col-md-2"></div>
  </div>
  <hr>
  {% endfor %}
   
  

  </div>
  <ul class="list-group list-group-flush">
      <li class="list-group-item">subtotaal</li>
      <li class="list-group-item">totaal</li>
      <a  href="/betaal/formulier" class="btn btn-primary">betaal</a>

    </ul>
</div>
